{
  "name": "@puzzleio/service-health",
  "version": "1.0.0",
  "private": true,
  "description": "Shows current status of the service which can be used in health-check solutions",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/",
    "build": "tsc",
    "rebuild": "run-s clean build",
    "test": "mocha --require ts-node/register tests/**/*.ts",
    "coverage": "nyc npm run test",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "prepublish": "run-s rebuild coverage",
    "postpublish": "run-s coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/puzzleio/service-health.git"
  },
  "keywords": [
    "service",
    "microservice",
    "health",
    "endpoint",
    "monitor"
  ],
  "types": "index.d.ts",
  "author": "PuzzleIO",
  "bugs": {
    "url": "https://github.com/puzzleio/service-health/issues"
  },
  "homepage": "https://github.com/puzzleio/service-health#readme",
  "devDependencies": {
    "@types/chai": "^4.2.9",
    "@types/express": "^4.17.2",
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.7.4",
    "chai": "^4.2.0",
    "coveralls": "^3.0.9",
    "mocha": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "coverage/**/*",
      "dist/**/*",
      "tests/**/*",
      "**/*.d.ts"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "all": true
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}